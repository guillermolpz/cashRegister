<div class="row">
  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading"> Lista de usuarios
        <span class="tools pull-right">
          <a href="javascript:;" class="fa fa-chevron-down"></a>
        </span>
      </header>

      <div class="panel-body">

        <div class="clearfix">
          <div class="btn-group pull-right">
            <%= link_to new_user_path, class: "btn btn-primary" do %>
              <i class='fa fa-plus'></i> Agregar usuarios
            <% end %>
          </div>
        </div>

        <section class="section-table" style="margin-bottom:30px; margin-top:30px;">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>ID</th>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo electr√≥nico</th>
                <th>Rol del usuario</th>
                <th colspan="3">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td>
                    <% if user.image_uid? %>
                      <%= image_tag (user.image.url), class: 'img-responsive img-circle photo' %>
                    <% else %>
                      <%= image_tag("/images/avatar.png", :alt => "Avatar", class: 'img-responsive img-circle photo') %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= user.lastName %></td>
                  <td><%= user.email %></td>
                  <td><%= traduceRol(user.roles_mask) %></td>
                  <td>
                    <%= link_to user, class: "btn btn-info" do %>
                      <i class='fa fa-eye'></i> Ver
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_user_path(user), class: "btn btn-success" do %>
                      <i class='fa fa-edit'></i> Editar
                    <% end %>
                  </td>
                  <td>
                    <%= link_to user, method: :delete, data: { confirm: 'Estas seguro de eliminar?' }, class: "btn btn-danger" do %>
                      <i class='fa fa-trash'></i> Eliminar
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
      </div>
    </section>
  </div>
</div>
