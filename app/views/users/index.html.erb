<div class="row">
  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading"> Lista de usuarios
        <span class="tools pull-right">
          <a href="javascript:;" class="fa fa-chevron-down"></a>
        </span>
      </header>

      <div class="panel-body">

        <div class="clearfix">
          <div class="btn-group pull-right">
            <a class="btn btn-primary text-white"><i class="fa fa-plus"></i> Agregar usuarios</a>
          </div>
        </div>

        <section class="section-table" style="margin-bottom:30px; margin-top:30px;">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>ID</th>
                <th>Foto</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo electr√≥nico</th>
                <th>Rol del usuario</th>
                <th colspan="3">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td>
                    <% if user.image_uid? %>
                      <%= image_tag (user.image.url), class: 'img-responsive img-circle photo' %>
                    <% else %>
                      <%= image_tag("/images/avatar.png", :alt => "Avatar", class: 'img-responsive img-circle photo') %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= user.lastName %></td>
                  <td><%= user.email %></td>
                  <td><%= traduceRol(user.roles_mask) %></td>
                  <td><%= link_to 'Ver', user %></td>
                  <td><%#= link_to 'Edit', edit_user_path(user) %></td>
                  <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>

          </table>
        </section>
        <%#= link_to 'New User', new_user_path %>


      </div>
    </section>
  </div>
</div>
