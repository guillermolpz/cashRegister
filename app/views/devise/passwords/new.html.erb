<div class="row">
  <div class="position-center">
    <section class="panel">

      <header class="panel-heading">
        Olvidaste tu contraseña?
      </header>

      <div class="panel-body">
        <div class="col-md-5 col-xs-12" style="margin: 0 auto !important; float: none !important;">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :'Correo electrónico' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
              </div>

              <div class="actions">
                <%= f.submit "Reestablecer contraseña", class: 'btn btn-info btn-lg btn-block' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
      </div>
    </section>
  </div>
</div>
