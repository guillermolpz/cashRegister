<!--<%= debug @products %>-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <header class="panel-heading">
        Lista de productos
        <span class="tools2 pull-right">
          <a class="btn btn-primary">Agregar producto</a>
        </span>
      </header>
      <div class="panel-body">
        <div class="row">

          <div class="layout-sidebar">
            <div class="layout-view">
              <ul class="listview listview--horizontal listview--edgetoedge">
                <% @products.group_by(&:product_type).each do |type, products| %>
                  <li class="listview-sectionheader">
                    <div><%= type %></div>
                  </li>

                  <% products.each do |product| %>
                    <li class="listview-item">
                      <div class=""><%= product.title %></div>
                      <div class=""><%= pluralize(product.variants.count, "variant") %> </div>
                    </li>


                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>
